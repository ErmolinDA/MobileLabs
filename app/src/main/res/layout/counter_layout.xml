<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/DialogCounterText"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:paddingTop="50dp"
        android:text="42"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="135dp" />

    <Button
        android:id="@+id/DialogCounterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:onClick="OnClickDialogSum"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/DialogCounterText"
        app:layout_constraintStart_toStartOf="@+id/DialogCounterText" />

    <Button
        android:id="@+id/DialogCloseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:onClick="OnClickClose"
        android:text="назад"
        app:layout_constraintBottom_toBottomOf="@+id/DialogCounterText"
        app:layout_constraintEnd_toEndOf="@+id/DialogCounterText" />

</androidx.constraintlayout.widget.ConstraintLayout>